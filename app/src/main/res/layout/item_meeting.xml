<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/meeting"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/general_padding"
	android:layout_marginTop="@dimen/general_padding"
	android:layout_marginEnd="@dimen/general_padding"
	android:layout_marginBottom="@dimen/small_padding"
	card_view:cardCornerRadius="2dp">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:id="@+id/meeting_info_container"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:padding="@dimen/general_padding"
			android:background="?android:attr/selectableItemBackground"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<TextView
				android:id="@+id/meeting_date"
				android:layout_width="0dp"
				android:layout_weight="25"
				android:layout_height="match_parent"
				android:padding="@dimen/small_padding"
				android:gravity="center"
				android:text="@string/date"
				android:textSize="15sp"
				android:ellipsize="end"
				android:maxLines="2"
				android:background="@drawable/item_meeting_border"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

			<TextView
				android:id="@+id/meeting_title"
				android:layout_width="0dp"
				android:layout_weight="75"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/generic_title"
				android:textSize="@dimen/firstname_size"
				android:ellipsize="end"
				android:maxLines="1"
				android:textColor="@color/colorPrimaryText"
				android:paddingStart="10dp"
				app:layout_constraintStart_toEndOf="@+id/meeting_date"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/meeting_people_container"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintTop_toBottomOf="@id/meeting_info_container"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:layout_marginStart="@dimen/general_padding"
				android:text="@string/_0"/>
			<android.support.v7.widget.RecyclerView
				android:id="@+id/meeting_peoplelist"
				android:layout_width="match_parent"
				android:layout_height="@dimen/icon_height"
				android:layout_marginEnd="@dimen/general_padding"
				android:layout_marginStart="@dimen/general_padding"
				android:layout_marginBottom="@dimen/general_padding"/>
		</LinearLayout>
	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>