<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:background="?android:attr/selectableItemBackground">

	<com.mikhaellopez.circularimageview.CircularImageView
		android:id="@+id/friend_icon"
		android:layout_width="70dp"
		android:layout_height="match_parent"
		android:gravity="center"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_alignBottom="@+id/friend_lastname"/>

	<TextView
		android:id="@+id/friend_firstname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/generic_firstname"
		android:textSize="20sp"
		android:ellipsize="end"
		android:maxLines="1"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		android:layout_toEndOf="@+id/friend_icon"
		android:textColor="@color/colorPrimaryText"/>

	<TextView
		android:id="@+id/friend_lastname"
		android:layout_width="wrap_content"
		android:layout_height="20sp"
		android:text="@string/generic_lastname"
		android:textSize="15sp"
		android:ellipsize="end"
		android:maxLines="1"
		android:layout_below="@+id/friend_firstname"
		android:layout_alignParentEnd="true"
		android:layout_toEndOf="@+id/friend_icon"
		android:textColor="@color/colorSecondaryText"/>

</RelativeLayout>